{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "emitDeclarationOnly": true,
    "composite": true,
    "outDir": "dist",
    "declaration": true
  },
  "include": ["src"],
  "ts-node": {
    "esm": true
  }
}
