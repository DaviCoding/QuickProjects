<%- include("./components/header") %>
<body class="bg-[#023430] h-screen w-full text-emerald-900">
  <h1
    class="p-10 text-white text-3xl flex items-center justify-center"
    style="font-family: 'Monomakh', serif"
  >
    <i class="bx bxl-mongodb text-4xl"></i> MongoDB
  </h1>

  <form
    action="/authenticate/login"
    method="POST"
    class="h-180 w-118 bg-white mx-auto mt-10 rounded-4xl flex flex-col p-10"
  >
    <div class="flex flex-col gap-2 text-center py-5">
      <h2
        class="text-3xl flex items-center justify-center"
        style="font-family: 'Monomakh', serif"
      >
        Welcome
      </h2>
      <div>
        <h3>This is just a login with mongodb</h3>
      </div>
    </div>
    <div class="flex flex-col gap-7">
      <div class="flex flex-col gap-2">
        <label for="name" class="text-xl font-bold">Name *</label>
        <input
          type="text"
          name="name"
          class="border rounded-2xl p-4"
          id="name"
        />
      </div>

      <div class="flex flex-col gap-2">
        <label for="email" class="text-xl font-bold">E-mail *</label>
        <input
          type="email"
          name="email"
          class="border rounded-2xl p-4"
          id="email"
        />
      </div>

      <div class="flex flex-col gap-2">
        <label for="password" class="text-xl font-bold">Password *</label>
        <input
          type="password"
          name="password"
          class="border rounded-2xl p-4"
          id="password"
        />
      </div>
      <div>
        <label for="hr" class="flex flex-row items-center gap-2.5 text-sm">
          <input id="hr" type="checkbox" class="peer hidden" />
          <div
            for="hr"
            class="h-5 w-5 flex items-center justify-center rounded-md border border-emerald-950 light:bg-emerald-900 dark:bg-white peer-checked:bg-emerald-900 transition"
          >
            <svg
              fill="none"
              viewBox="0 0 24 24"
              class="w-5 h-5 peer-checked:bg-emerald-900 dark:stroke-[#fff]"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M4 12.6111L8.92308 17.5L20 6.5"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              ></path>
            </svg>
          </div>
          I agree to the Terms of Service and Privacy Policy.
          <span>*</span>
        </label>
      </div>
      <button
        id="send"
        type="submit"
        class="w-full p-5 bg-green-400 rounded-2xl text-black border border-black cursor-pointer disabled:bg-green-200 disabled:text-neutral-500 disabled:border-neutral-500"
        disabled="disabled"
      >
        Create your account
      </button>
    </div>
  </form>

  <script>
    let checkbox = document.getElementById("hr");
    let button = document.getElementById("send");

    checkbox.onclick = () => {
      checkbox.checked
        ? button.removeAttribute("disabled")
        : button.setAttribute("disabled", "disabled");
    };
  </script>
</body>
<%- include("./components/footer") %>
